{% extends "layout.njk" %} 

{% block head %}

<title>{{ item.title }} | Rodney Mullen</title>

{% endblock %}

{% block content %}

<div id="wrapper" class="video">
    <h1>{{ item.title }}</h1>
</div>

<section class="video">
    
    <div class="card" id="{{item.id}}">
        <div class="card__video-container">
            <iframe src="https://www.youtube.com/embed/{{item.id}}" frameborder="0"></iframe>
            
        </div>
        <div class="card__content">
            <p>{{item.title}}</p>
        </div>
        <div class="card__info">
            <p>{{item.time}}</p>
            
        </div>
    </div>

    <div class="space"></div>
</section>

<footer class="copyright">
    <p>&copy; <span class="date"></span> - Ted Martins</p>
</footer>
{% endblock %}